
@{
    ViewBag.Title = "SubscribersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using GoldenNumbers.Models
@using System.Globalization

<!-- Page header -->
<div class="page-header page-header-default">
    <div class="page-header-content responsive-menu">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Golden Numbers</span> Exchange</h4>
        </div>


    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Admin")"><i class="icon-home2 position-left"></i> Home</a></li>

            <li class="active">Buyer's List List</li>
        </ul>


    </div>
</div>
<div class="content">
    <!-- /page header -->
    <!-- Content area -->
    <!-- Basic datatable -->
    <div class="panel panel-flat table-responsive">
        <div class="panel-heading">
            <h1 class="panel-title">Subscribers List</h1>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>

        <div class="panel-body">
        </div>

        <table class="table datatable-basic">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Created At</th>
                    <th class="">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Subscriber sub in ViewBag.subscribers)
                {
                   string s= sub.CreatedAt.Value.ToString("dd-MM-yyyy"); 

                    <tr>
                        <td>@sub.Email</td>
                        <td>@s</td>


                        <td><button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal_theme_danger" onclick="DeleteDesiredNumber('@sub.Id')">Delete </button></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="footer text-muted">
        &copy; 2019.Powered by <a href="http://nodlays.com" target="_blank">Nodlays</a>
    </div>
    <!-- /content area -->
</div>



<!-- Danger modal -->
<div id="modal_theme_danger" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Warning</h6>
            </div>

            <div class="modal-body">
                <h6 class="text-semibold">Are you Sure to Delete this Subscriber's Record?</h6>

                <hr>

            </div>
            <form action="@Url.Action("DeleteSubscriber","Admin")" method="post">
                <input type="hidden" id="NumId" name="DnumId" />

                <div class="modal-footer">
                    <button type="button" class="btn btn-link btn-sm" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-danger btn-sm">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>



<script type="text/javascript">
    function DeleteDesiredNumber(id) {
        document.getElementById("NumId").defaultValue = id;
    }

</script>

