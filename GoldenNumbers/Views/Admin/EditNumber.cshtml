
@{
    ViewBag.Title = "EditNumber";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Golden</span> Number</h4>
        </div>


    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Admin")"><i class="icon-home2 position-left"></i> Home</a></li>
            <li><a href="">Numbers</a></li>
            <li class="active">Edit Number</li>
        </ul>


    </div>
</div>
<div class="content">

    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h2 class="panel-title">Update Number</h2>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>

        <div class="panel-body">
            <center style="color:red">@ViewBag.message</center>
            <form class="form-horizontal" action="@Url.Action("PostEditNumber","Admin") " method="post">
                <fieldset class="content-group">



                    <input type="hidden" class="form-control" required value="@ViewBag.num.Id" name="id" placeholder="">
                    <div class="form-group">
                        <label class="control-label col-lg-offset-1 col-lg-2">Number</label>
                        <div class="col-lg-8">
                            <input type="number" name="Number" required class="form-control" value="@ViewBag.num.Number1" placeholder="Enter Number">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-offset-1 col-lg-2">Price</label>
                        <div class="col-lg-8">
                            <input type="number" name="Price"  class="form-control" value="@ViewBag.num.Price" placeholder="Enter Price">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-offset-1 col-lg-2">Company</label>
                        <div class="col-lg-8">
                            <select name="SelectCompany" required class="form-control">
                                <option value="@ViewBag.num.Company" selected>@ViewBag.num.Company</option>
                                <option value="Mobilink">Mobilink</option>
                                <option value="Telenor">Telenor</option>
                                <option value="Ufone">Ufone</option>
                                <option value="Warid">Warid</option>
                                <option value="Zong">Zong</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-offset-1 col-lg-2">Type</label>
                        <div class="col-lg-8">
                            <select name="SelectType" required class="form-control">
                                <option value="@ViewBag.num.Type">@ViewBag.num.Type</option>
                                <option value="Regular">Regular</option>
                                <option value="Triple">Triple</option>
                                <option value="Tetra">Tetra</option>
                                <option value="Penta">Penta</option>
                                <option value="Hexa">Hexa</option>
                                <option value="786">786</option>
                                <option value="Triple Pair">Triple Pair</option>
                                <option value="UAN">UAN</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-offset-1 col-lg-2">Status</label>
                        <div class="col-lg-8">
                            <select name="SelectStatus" required class="form-control">
                                <option value="@ViewBag.num.Status">@ViewBag.num.Status</option>
                                <option value="Normal">Normal</option>
                                <option value="Diamond">Diamond</option>
                                <option value="Platinium">Platinium</option>
                                <option value="Gold">Gold</option>

                            </select>
                        </div>
                    </div>


                </fieldset>



                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Update <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </form>
        </div>
    </div>
    <!-- /form horizontal -->
    <!-- Footer -->
    <div class="footer text-muted">
        &copy; 2019.Powered by <a href="http://nodlays.com" target="_blank">Nodlays</a>
    </div>
    <!-- /footer -->

</div>
